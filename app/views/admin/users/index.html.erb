<div class="container mt-3">
  <div class="row">
    <div class="col-2">
    </div>
    <div class="col-8">
      <div class="card">
        <div class="card-header">
          <div class="float-left">使用者列表</div>
          <div class="float-right">
            <%= link_to "新增使用者", new_admin_user_path %>
          </div>
        </div>
        <div class="card-body">
          <table class="table table-bordered table-hover mt-3">
            <thead>
              <tr>
                <th scope="col">暱稱</th>
                <th scope="col">E-mail</th>
                <th scope="col">角色</th>
                <th scope="col">任務數量</th>
                <th scope="col"></th>
                <th scope="col"></th>
                <th scope="col"></th>
              </tr>
            </thead>
            <tbody>
              <% @users.each do |user| %>
                <tr>
                  <th scope="row"><%= user.user_name %></th>
                  <td><%= user.email %></td>
                  <td><%= I18n.t(user.roles[0].name) %></td>
                  <td><%= user.tasks.size %></td>
                  <td><%= link_to "任務列表", admin_user_tasks_path(user) %></td>
                  <td><%= link_to "修改", edit_admin_user_path(user) %></td>
                  <td><%= link_to "刪除", admin_user_path(user), method: :delete %></td>
                </tr>
              <% end  %>
            </tbody>
          </table>
          <div class="text-danger"><%= flash[:notice] %></div>
        </div>
      </div>
    </div>
    <div class="col-2">
    </div>
  </div>
</div>
