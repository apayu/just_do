<div class="container mt-3">
  <div class="row">
    <div class="col-4">
    </div>
    <div class="col-4">
      <div class="card">
      <article class="card-body">
        <h4 class="card-title mb-4 mt-1">編輯使用者</h4>
        <%= form_for [:admin, @user] do |f| %>
          <div class="form-group">
            <div>暱稱</div>
            <%= f.text_field :user_name, placeholder: "暱稱", class: "form-control" %>
          </div>
          <div class="form-group">
            <div>角色</div>
            <%= f.collection_select :role_ids, Role.all, :id, :translated_name, class: "form-control" %>
          </div>
          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                  <%= f.submit "編輯", class: "btn btn-primary btn-block" %>
              </div> <!-- form-group// -->
            </div>
            <div class="col-md-6 text-right">
              <%= link_to "返回", admin_users_path %><br />
            </div>
          </div> <!-- .row// -->
        <% end %>
      </article>
      <% if @user.errors.any? %>
        <% @user.errors.full_messages.each do |msg| %>
          <div class="text-danger">
            <%= I18n.t(msg) %>
          </div>
        <% end %>
      <% end %>
      </div> <!-- card.// -->
    </div>
    <div class="col-4">
    </div>
  </div>
</div>
