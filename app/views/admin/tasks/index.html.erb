<div class="container mt-3">
  <div class="row">
    <div class="col-2">
    </div>
    <div class="col-8">
      <div class="card">
        <div class="card-header">
          <div class="float-left"><%= @user.user_name %> 的任務列表</div>
          <div class="float-right">
            <%= link_to "返回", admin_users_path %>
          </div>
        </div>
        <div class="card-body">
          <% if @user.tasks.count == 0 %>
            <div>
              尚未建立任務
            </div>
          <% else %>
            <table class="table table-bordered table-hover">
              <thead>
                <tr>
                  <th scope="col">任務名稱</th>
                </tr>
              </thead>
              <tbody>
                <% @user.tasks.each do |task| %>
                  <tr>
                    <th scope="row"><%= task.name %></th>
                  </tr>
                <% end  %>
              </tbody>
            </table>
          <% end  %>
        </div>
      </div>
    </div>
    <div class="col-2">
    </div>
  </div>
</div>
