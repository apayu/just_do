<%= form_for(task) do |f| %>
  <div class="form-group row">
    <%= f.label :name, "名稱", class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :content, "內容", class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.text_field :content, class: "form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :finish_time, "結束時間", class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.text_field :finish_time, class: "form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :state, "狀態", class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.select :state, [["待處理", "pending"], ["進行中", "processing"], ["完成", "finish"]], class: "form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :priority, "優先順序", class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.select :priority, [["低", 0], ["中", 1], ["高", 2]], class: "form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :tag_list, "標籤", class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.text_field :tag_list, class: "form-control" %>
      <div>
        例如:運動, 唱歌
      </div>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :document, "上傳檔案", class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.file_field :document, multiple: true, class: "form-control" %>
    </div>
  </div>
  <div class="row">
    <div class="col-6">
      <%= f.submit "送出",class: "btn btn-primary" %>
    </div>
    <div class="col-6 text-right">
      <%= link_to "返回", tasks_path %>
    </div>
  </div>
<% end %>
<div>
<% if task.errors.any? %>
  <% task.errors.full_messages.each do |msg| %>
    <div class="text-danger">
      <%= msg %>
    </div>
  <% end %>
<% end %>
</div>
