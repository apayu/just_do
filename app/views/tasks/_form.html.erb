<%= form_for(task) do |f| %>
  <%= f.label :name, "任務名稱" %>
  <%= f.text_field :name %>
  <%= f.label :content, "任務內容" %>
  <%= f.text_field :content %>
  <%= f.submit "送出" %>
<% end %>
<% if task.errors.any? %>
  <% task.errors.full_messages.each do |msg| %>
    <div>
      <%= msg %>
    </div>
  <% end %>
<% end %>
<%= link_to "返回", tasks_path %>
