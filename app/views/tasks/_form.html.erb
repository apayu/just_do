<%= form_for(task) do |f| %>
  <%= f.label :name, "任務名稱" %>
  <%= f.text_field :name %>
  <%= f.label :content, "任務內容" %>
  <%= f.text_field :content %>
  <%= f.label :finish_time, "任務結束時間" %>
  <%= f.text_field :finish_time %>
  <%= f.label :state, "狀態" %>
  <%= f.select :state, [["待處理", "pending"], ["進行中", "processing"], ["完成", "finish"]] %>
  <%= f.label :priority, "優先順序" %>
  <%= f.select :priority, [["低", 0], ["中", 1], ["高", 2]] %>
  <%= f.submit "送出" %>
<% end %>
<% if task.errors.any? %>
  <% task.errors.full_messages.each do |msg| %>
    <div>
      <%= msg %>
    </div>
  <% end %>
<% end %>
<%= link_to "返回", tasks_path %>
