<div class="container mt-3">
  <div class="row">
    <div class="col-4">
    </div>
    <div class="col-4">
      <div class="card">
      <article class="card-body">
        <h4 class="card-title mb-4 mt-1">註冊</h4>
        <%= form_for @user do |f| %>
          <div class="form-group">
            <%= f.text_field :user_name, placeholder: "暱稱", class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.email_field :email, placeholder: "Email", class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.password_field :password, placeholder: "輸入密碼", class: "form-control" %>
          </div>
          <div class="form-group">
            <div>
              上傳大頭貼
            </div>
            <%= f.file_field :avatar, class: "form-control" %>
          </div>
          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                  <%= f.submit "註冊", class: "btn btn-primary btn-block" %>
              </div> <!-- form-group// -->
            </div>
            <div class="col-md-6 text-right">
              <%= link_to "登入", login_path %><br />
            </div>
          </div> <!-- .row// -->
        <% end %>
      </article>
      <% if @user.errors.any? %>
        <% @user.errors.full_messages.each do |msg| %>
          <div class="text-danger">
            <%= msg %>
          </div>
        <% end %>
      <% end %>
      </div> <!-- card.// -->
    </div>
    <div class="col-4">
    </div>
  </div>
</div>

